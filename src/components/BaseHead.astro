---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
---
<!-- component -->
<header
  class="border-gray-100 sticky top-0 z-40 bg-gradient-to-r from-white to-amber-50"
>
  <div class="container mx-auto md:lg:xl:px-20">
    <nav class="border-gray-200 px-1 py-2.5">
      <div class="flex flex-wrap justify-between items-center mx-auto">
        <a href="/" class="flex items-center">
          <Image
            src={logo}
            alt="Orlando Superior Transportation Service Logo"
            style={{ objectFit: "contain" }}
            class="mr-3"
            loading="eager"
          />
        </a>
        <div class="flex items-center lg:order-2">
          <a
            class="hidden md:block leading-6 py-2 text-xl bg-transparent px-6 text-center rounded text-black sm:w-12/12"
            href="tel:4076976002"
            ><span class="block text-xs">Call Now</span>407 697 6002</a
          >
          <a href="/book-a-ride/" class="hidden md:block p-1 rounded-full from-rose-400 via-fuchsia-500 to-indigo-500 bg-gradient-to-r">
            <span class="block text-black px-4 py-1 font-semibold rounded-full bg-amber-50 hover:bg-transparent hover:text-white transition">Book Now</span>
          </a>
          <button
            type="button"
            id="menu"
            class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden">
            <span class="sr-only">Open main menu</span>
            <svg
              class="w-6 h-6"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                clip-rule="evenodd"></path></svg
            >
            <svg
              class="hidden w-6 h-6"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"></path></svg
            >
          </button>
        </div>
        <div
          class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-1"
          id="mobile-menu-2"
        >
          <ul
            class="min-h-screen md:min-h-0 flex flex-col mt-4 font-medium lg:flex-row lg:space-x-7 lg:mt-0"
          >
            <li>
              <a
                href="/"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                aria-current="page">Home</a
              >
            </li>
            <li
            >
              <a
                href="/#about"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                >About Us	</a
              >
            </li>
            
            <li
            >
              <a
                href="/#Fleet"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                >Our Fleet	</a
              >
            </li>
            
            <li>
              <a
                href="/#service"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                >Services</a
              >
            </li>
            <li>
              <a
                href="/rates/"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                >Rates</a
              >
            </li>
            <li>
              <a
                href="/contact/"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                >Contact</a
              >
            </li>
            <li>
              <a
                href="/#faq"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                >FAQs</a
              >
            </li>
            <li>
              <a
                href="/blog/"
                class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-4 pr-2 pl-2 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:"
                >Blogs</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
<script>
import { Collapse } from 'flowbite';
const $targetEl = document.getElementById('mobile-menu-2');
const instanceOptions = {
  id: 'mobile-menu-2',
  override: true
};
const collapse = new Collapse($targetEl, null, null, instanceOptions);
const liElements = document.querySelectorAll('#mobile-menu-2 ul li');
  liElements.forEach((li) => {
    li.addEventListener('click', () => {
      collapse.collapse();
    });
  });
document.getElementById('menu').addEventListener('click', () => {
    collapse.toggle();
});
</script>