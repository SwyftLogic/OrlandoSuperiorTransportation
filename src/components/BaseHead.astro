---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
---	

<!-- component -->
<header class="border-gray-100 backdrop-blur-sm  sticky top-0 z-40 bg-gradient-to-r from-white to-amber-50">
<div class="container mx-auto md:lg:xl:px-20">
        <nav class="border-gray-200 px-1 py-2.5 ">
            <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
                <a href="/" class="flex items-center">
				<Image src={logo}  alt="Orlando Transportations Service" style={{objectFit: "contain"}} class="mr-3" width="140" height="70"/>
					
                      </a>
                <div class="flex items-center lg:order-2 ">
				<a class="hidden md:block leading-6 py-2 text-xl bg-transparent  px-6 text-center rounded text-black grid sm:w-12/12" href="tel:4076976002"><span class="block text-xs ">Call Now</span>407 697 6002</a>
			

                    <a href="/book" class="hidden md:block leading-5 py-2 text-2lg bg-transparent hover:bg-yellow-600 border-2 border-yellow-600  px-4 text-center rounded-full text-black hover:text-white ">Book Now</a>
                    <button data-collapse-toggle="mobile-menu-2" type="button" class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 " aria-controls="mobile-menu-2" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
                        <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </button>
                </div>
                <div class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-1" id="mobile-menu-2">
                    <ul class="min-h-screen md:min-h-0 flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
                        <li>
                            <a href="/" class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-5 pr-4 pl-3 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:" aria-current="page">Home</a>
                        </li>
                        <li>
                            <a href="#"  class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-5 pr-4 pl-3 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:">About</a>
                        </li>
                        <li>
                            <a href="#" class="block tracking-wide uppercase sm:normal-case text-3xl md:text-base py-5 pr-4 pl-3 text-gray-700 border-b border-gray-300 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-yellow-700 lg:p-0 lg:">Service</a>
