---
export const prerender = false;

import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';
import whatsapp from "../assets//whatsappicon.png";
---
<meta name="description" content="Looking for reliable transportation services in Orlando? Experience luxury and comfort with our premium services. Contact us today to book your ride." />

<Layout title="Contact Orlando Superior Transportation" >
 
<!-- component -->
  <div class="container max-w-screen-lg mx-auto px-3 md:px-0">
    <h1 class="text-5xl font-extrabold text-center">Orlando Travel Reservation Contact</h1>
   
    <p class="pt-2 pb-4 text-center">If you have any questions or require assistance, please don't hesitate to reach out to Orlando Superior Transportation Services. We are here to ensure a smooth and convenient experience for you.
    </p>

    
    <div  class="  px-2 md:px-0 relative flex items-center  overflow-hidden">
     
        <div class="relative mx-auto  pb-20   ">
            <div class="flex flex-col items-center lg:flex-row pt-10 pb-6">
                <div class="grid sm:grid-cols-2 items-center gap-16  mx-auto   ">
                    <div>
                        <h4 class="text-lg">Address</h4>
                        <p class="text-sm mt-2">11530 Charnock Dr Windermere Florida 34786</p>
                        <div class="mt-12">
                            <h2 class="text-lg ">Email</h2>
                            <ul class="mt-3">
                                <li class="flex items-center">
                                    <div class="bg-[#e6e6e6cf] h-10 w-10 rounded-full flex items-center justify-center shrink-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill='#007bff'
                                            viewBox="0 0 479.058 479.058">
                                            <path
                                                d="M434.146 59.882H44.912C20.146 59.882 0 80.028 0 104.794v269.47c0 24.766 20.146 44.912 44.912 44.912h389.234c24.766 0 44.912-20.146 44.912-44.912v-269.47c0-24.766-20.146-44.912-44.912-44.912zm0 29.941c2.034 0 3.969.422 5.738 1.159L239.529 264.631 39.173 90.982a14.902 14.902 0 0 1 5.738-1.159zm0 299.411H44.912c-8.26 0-14.971-6.71-14.971-14.971V122.615l199.778 173.141c2.822 2.441 6.316 3.655 9.81 3.655s6.988-1.213 9.81-3.655l199.778-173.141v251.649c-.001 8.26-6.711 14.97-14.971 14.97z"
                                                data-original="#000000" />
                                        </svg>
                                    </div>
                                    <a target="blank" href="mailto:info@orlandosuperiortransportation.com" class="text-[#007bff] text-sm ml-3">
                                        
                                        <strong>info@orlandosuperiortransportation.com
                                        </strong>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <br>
                        <br>
                    </div>
                  
                    <div class="ml-auo space-y-4">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d28063.286983015267!2d-81.57304400000001!3d28.452103!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e780e4867b918d%3A0xf2c6eb922690a40b!2s11530%20Charnock%20Dr%2C%20Windermere%2C%20FL%2034786!5e0!3m2!1sen!2sus!4v1708090795180!5m2!1sen!2sus" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" title="Orlando Superior Transportation Location" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
            
            
    
                
        </div> 
       
       
         
    
    
    
        
     
    </div>
    


</div>


<a
class="fixed bottom-20 md:bottom-2 mb-2 right-2"
href="https://wa.me/+14076976002?text=I'm%20interested%20in%20booking%20a%20reservation"
>
<Image
  src={whatsapp}
  loading="eager"
  alt="Whatsapp Logo"
  style={{ objectFit: "contain" }}
  width="48"
  height="48"
/>
</a>

<div
class="block md:hidden fixed w-full px-2 bg-gray-50 border-t-2 py-2 bottom-0 z-50"
>
<div class="grid grid-cols-2 gap-2 items-center">
  <a
    href="tel:4076976002"
    class="grid sm:w-12/12 text-center p-1 rounded-full from-rose-400 via-fuchsia-500 to-indigo-500 bg-gradient-to-r"
  >
    <span
      class="block text-black py-2 pb-3 leading-5 text-lg font-semibold rounded-full bg-gray-50 hover:bg-transparent hover:text-white transition"
    >
      <span class="block text-xs">Call Now</span>
      407 697 6002</span
    >
  </a>

  <a
    href="/book-a-ride/"
    class="grid sm:w-12/12 text-center p-1 rounded-full from-rose-400 via-fuchsia-500 to-indigo-500 bg-gradient-to-r"
  >
    <span
      class="block text-black py-2 pb-3 leading-5 text-lg font-semibold rounded-full bg-gray-50 hover:bg-transparent hover:text-white transition"
    >
      <span class="block text-xs">Orlando Transportation</span>
      Book Now</span
    >
  </a>
</div>
</div>
</Layout>
