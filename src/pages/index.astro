							<button type="button" class="w-3 h-3 rounded-full border-2" aria-current="false" aria-label="Slide 1" data-carousel-slide-to="0"></button>
							<button type="button" class="w-3 h-3 rounded-full border-2" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
